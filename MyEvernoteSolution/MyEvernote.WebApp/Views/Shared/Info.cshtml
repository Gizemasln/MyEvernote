
@using MyEvernote.WebApp.ViewModels
@model InfoViewModel
@{
    ViewBag.Title = Model.Title;
}

@*Aşağıda @Model ile tanımlı kısımlar  Ok sayfasına özel gösterilecek*@
@*TÜM metotlar INFO mesajı  olarak bu schtml sayfasını kullancak*@

<link href="~/Content/login-register.css" rel="stylesheet" />

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-info">
                    <h2><span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (string msg in Model.Items)
                        {
                            @msg <br />


                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

</section>

@{
    @*<script> kodlarının koşula bağlı olması için boş bir strin goluşturup içine kodları atadım*@
    string js = string.Empty;
    if (Model.IsRedirecting) //Model daki IsRedirecting true ise
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "';}, " + Model.RedirectingTimeout + " );";
    }
}

